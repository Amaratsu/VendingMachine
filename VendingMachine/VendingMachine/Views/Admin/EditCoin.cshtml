@model VendingMachine.Models.Coin

@{
    ViewBag.Title = "Редактирование монет";
}

<h2 class="text-center">Редактирование монет</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2" for="NumberOfCoins1">Количество монет номиналом 1 руб</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfCoins1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberOfCoins1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NumberOfCoins2">Количество монет номиналом 2 руб</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfCoins2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberOfCoins2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NumberOfCoins5">Количество монет номиналом 5 руб</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfCoins5, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberOfCoins5, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NumberOfCoins10">Количество монет номиналом 10 руб</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfCoins10, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberOfCoins10, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку монет", "CoinsIndex", null, new { @class = "btn btn-primary" } )
</div>
